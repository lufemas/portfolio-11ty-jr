<!-- PROJECTS -->

<section id="projects" class="projects-section">
  <h2 class="projects-section-header section-header">Some of my projects</h2>

  <div class="projects-grid">
    {%- for project in collections.commercials -%}
    <div>

      <a href="{{ project.data.link }}" target="_blank" class="project project-tile">
        <img
          loading="lazy"
          class="project-image"
          src="{{ project.data.thumb }}"
          alt="project"
        />
        <p class="project-title">
          <span class="code">&lt;</span>
          {{ project.data.projectTitle }}
          <span class="code">&#47;&gt;</span>
        </p>
  
        <div class="project-about">
          <p>{{ project.data.description }}</p>
        </div>
      </a>
    </div>
    {%- endfor -%}
  </div>

  <a
    href="https://codepen.io/FreeCodeCamp/"
    class="btn btn-show-all"
    target="_blank"
    >Sources and More ...<i class="fas fa-chevron-right"></i
  ></a>
</section>

<!-- CONTACT -->

<section id="contact" class="contact-section">
  <div class="contact-section-header">
    <h2>Let's work together...</h2>
    <p>How do you take your coffee?</p>
  </div>
  <div class="contact-links">
    <a
      id="profile-link"
      href="https://github.com/lufemas"
      target="_blank"
      class="btn contact-details"
      ><i class="fab fa-github"></i> GitHub</a
    >
    <a
      href="https://ca.linkedin.com/in/luis-fernando-maschietto-junior-6931a5134"
      target="_blank"
      class="btn contact-details"
      ><i class="fab fa-linkedin"></i> Linkedin</a
    >
    <a href="mailto:maschietto.jr@gmail.com" class="btn contact-details"
      ><i class="fas fa-envelope"></i> maschietto.jr@gmail.com</a
    >
  </div>

  <form class="sendmail">
    <div class="fields">
      <label class="" for="name"
        >Name
        <span class="validation-alert" id="name-validation"
          >( Enter your name )</span
        ></label
      >
      <input class="" type="text" name="name" id="name" />
    </div>

    <div class="fields">
      <label class="" for="email"
        >Email
        <span class="validation-alert" id="email-validation"
          >( Enter a valid Email )</span
        ></label
      >
      <input class="" type="email" name="email" id="email" />
    </div>

    <div class="fields">
      <label class="" for="phone">Phone</label>
      <input class="" type="text" name="phone" id="phone" />
    </div>

    <div class="fields">
      <label class="" for="message"
        >Message
        <span class="validation-alert" id="message-validation"
          >( You forgot the message )</span
        ></label
      >
      <textarea
        class=""
        name="message"
        id="message"
        cols="30"
        rows="10"
      ></textarea>
    </div>

    <input class="btn btn-sendmail" type="submit" id="send-btn" value="Send" />
  </form>
</section>
